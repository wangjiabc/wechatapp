/* pages/cash/cash.wxss */
form{
    border-top: 1rpx solid #eee;
    display: block;
    padding-bottom: 32rpx;
}

.block{
    border-bottom: 1rpx solid #e3e3e3;
    background: #fff;
    padding: 32rpx 24rpx;
}

.user-money{
    font-size: 15pt;
}

.cash-max-day{
    font-size: 9pt;
    margin-top: 18rpx;
    color: #888;
}

.cash-cny{
    font-size: 19pt;
    color: #ff4544;
    line-height: 1.7;
}

.cash-input{
    font-size: 19pt;
    height: 100%;
    width: 100%;
    padding: 0 32rpx;
}
.cash-min{
    font-size: 9pt;
}

.cash-btn{

    width: 100%;
    height: 100rpx;
    background-color: #ff4544;
    color:#fff;
    /* font-weight: bold; */
    text-align: center;
    font-size: 13pt;
    line-height: 100rpx;
}

.cash-max-detail{
    border: 1rpx solid #bbb;
    padding: 4rpx 8rpx;
    border-radius: 5rpx;
    margin-left: 24rpx;
}