.picker-box {
	position: fixed;
	width: 100%;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background-color: rgba(0, 0, 0, 0.5);

}

.box-hide {
	z-index: -12;
}
.box-show {
	z-index: -1;
}

.show-box{
	z-index: 1;
}

picker-view{
	position: absolute;
	bottom: 0;
}
.hide-show{
	z-index: -13;
}

.show {
    text-align: center;
    margin: 20px;
    height: 50px;
}

